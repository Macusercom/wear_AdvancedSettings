    <com.sssemil.advancedsettings.util.preference.BooleanPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_defaultValue="true"
        app:pref_icon="@mipmap/ic_watch_import"
        app:pref_iconOff="@mipmap/ic_watch_import"
        app:pref_iconOn="@mipmap/ic_watch_import"
        app:pref_key="touch_to_wake_screen"
        app:pref_summaryOff="Off"
        app:pref_summaryOn="On"
        app:pref_title="@string/touch_to_wake" />

