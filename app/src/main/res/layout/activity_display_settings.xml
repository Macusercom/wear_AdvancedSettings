<com.sssemil.advancedsettings.util.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sssemil.advancedsettings.util.preference.ListPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_defaultValue="10000"
        app:pref_entries="@array/entries_screen_timeout"
        app:pref_entryValues="@array/values_screen_timeout"
        app:pref_icon="@mipmap/ic_timelapse"
        app:pref_key="screen_timeout_settings"
        app:pref_title="@string/screen_timeout" />

    <com.sssemil.advancedsettings.util.preference.ButtonPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="com.sssemil.advancedsettings.BrightnessActivity"
        app:pref_icon="@mipmap/ic_brightness"
        app:pref_key="brightness_settings"
        app:pref_title="@string/brightness" />

    <com.sssemil.advancedsettings.util.preference.ButtonPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="com.sssemil.advancedsettings.ScreenSaverBrightnessActivity"
        app:pref_icon="@mipmap/ic_brightness"
        app:pref_key="screen_saver_brightness_settings"
        app:pref_title="@string/screen_saver_brightness" />

