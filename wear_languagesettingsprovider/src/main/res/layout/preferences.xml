<sssemil.com.languagesettingsprovider.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <sssemil.com.languagesettingsprovider.preference.ListPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_defaultValue="English, US"
        app:pref_entries="@array/entries_language"
        app:pref_entryValues="@array/values_language"
        app:pref_icon="@mipmap/ic_language_and_input"
        app:pref_key="system_language"
        app:pref_title="@string/lang_input" />

</sssemil.com.languagesettingsprovider.preference.PreferenceScreen>
